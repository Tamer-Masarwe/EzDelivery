@page
@model LoginModel

@{
    ViewData["Title"] = "EZ Delivery - Log in";
}

<div class="container">
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="/imgs/FinalLogo.png" id="icon" alt="User Icon" />
            </div>
            <!-- Login Form  form-control -->
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <input type="email" asp-for="Input.Email" class="fadeIn second" placeholder="Email" />
                        <br />
                        <span asp-validation-for="Input.Email" class="text-danger fadeIn second"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" asp-for="Input.Password" class="fadeIn third" placeholder="Password" />
                        <br />
                        <span asp-validation-for="Input.Password" class="text-danger fadeIn third"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox fadeIn five">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="button" class="fadeIn fourth" value="Log In" onclick="submit()">
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="fadeIn five underlineHover">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fadeIn five underlineHover">Register as a new user</a>
                        </p>
                        @*<p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="fadeIn five underlineHover">Resend email confirmation</a>
                        </p>*@
                    </div>
                </form>
            </section>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
