<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Custom styles for this template -->
    <link href="/css/small-business.css" rel="stylesheet">
    <link href="/css/MyStyle.css" rel="stylesheet" />
    <link href="/css/loginStyle.css" rel="stylesheet" />
    <link href="~/css/MainPage.css" rel="stylesheet" />
    <link href="~/css/Thanks.css" rel="stylesheet" />
    <link href="~/css/Loader.css" rel="stylesheet" />
    <script src="~/scripts/NavbarState.js"></script>
    <script src="~/scripts/Loading.js"></script>
</head>

<body onload="NavbarState()">
    <!-- Loader -->
    <div class="loader"></div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home">EZ Delivery</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="/Home" asp-action="Index">Home</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="py-5 bg-dark footer_bottom">
        <div class="container">
            <p class="m-0 text-center text-white">
                Copyright &copy; Team TLORT &emsp;
                <a class="footer_a" asp-area="" asp-controller="/Home" asp-action="aboutUs">About Us</a> &emsp;
                <a class="footer_a" asp-area="" asp-controller="/Home" asp-action="contactUs">Contact Us</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>